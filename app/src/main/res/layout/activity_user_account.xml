<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:contetxt="comp3350.GoCart.presentation.UsersActivity">


    <Button
        android:id="@+id/buttonInitializeUpdateName"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:text="Update"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="169dp"
        android:onClick="buttonInitializeUpdateUserNameOnClick" />

    <Button
        android:id="@+id/buttonCompleteUpdateName"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:text="Update"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="169dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="6dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="177dp" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="177dp" />

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="177dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="235dp" />

    <TextView
        android:id="@+id/textViewUserAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Address"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="237dp" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="292dp" />

    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User email"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="292dp" />

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="145dp"
        android:layout_height="79dp"
        android:text="Change Password"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="367dp" />

    <Button
        android:id="@+id/buttonPaymentMethod"
        android:layout_width="145dp"
        android:layout_height="79dp"
        android:text="Payment Method"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="367dp" />

    <Button
        android:id="@+id/buttonPreviousOrders"
        android:layout_width="145dp"
        android:layout_height="79dp"
        android:text="Previous Orders"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="475dp" />

    <Button
        android:id="@+id/buttonDeleteUserAccount"
        android:layout_width="145dp"
        android:layout_height="79dp"
        android:text="Delete User Account"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="474dp" />

    <Button
        android:id="@+id/buttonUpdateAddress"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:text="Update"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="227dp" />

    <Button
        android:id="@+id/buttonUpdateEmail"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:text="Update"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="281dp" />


</androidx.constraintlayout.widget.ConstraintLayout>